<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.juniorhome">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Messaging.activities.MessagingActivity" />
        <activity android:name=".Messaging.activities.ChatActivity"
            android:theme="@style/NoActionBarTheme"/>

        <activity android:name=".ChildrenListView.ChildrenListActivity"
            android:parentActivityName=".Login"/>

        <activity android:name=".ChildrenListView.CDetailsActivity"
            android:parentActivityName=".ChildrenListView.ChildrenListActivity"/>

        <activity android:name=".ParentListView.ParentListActivity"
            android:parentActivityName=".Login"/>
        <activity android:name=".ParentListView.PDetailsActivity"
            android:parentActivityName=".Login"/>

        <activity android:name=".StaffListView.ItemsActivity"
        android:parentActivityName=".Login">
        <!-- The meta-data tag is required if you support API level 15 and lower -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".Login" />
        </activity>

        <activity android:name=".StaffListView.DetailsActivity"
            android:parentActivityName=".StaffListView.ItemsActivity">
        <!-- The meta-data tag is required if you support API level 15 and lower -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".StaffListView.ItemsActivity" />
        </activity>

        <activity android:name=".StaffListView.AddStaffActivity"
            android:parentActivityName=".Admin">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Admin" />
        </activity>

        <activity android:name=".AdmissionRequest.ViewRequestsActivity"
            android:parentActivityName=".Admin">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Admin" />
        </activity>

        <activity android:name=".AdmissionRequest.ViewFormActivity"
            android:parentActivityName=".AdmissionRequest.ViewRequestsActivity">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AdmissionRequest.ViewRequestsActivity" />
        </activity>

        <activity android:name=".Staff" />
        <activity android:name=".Parent" />
        <activity android:name=".Admin" />
        <activity
            android:name=".UserProfile"
            android:parentActivityName=".Login">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Login" />
        </activity>
        <activity android:name=".Login" />
        <activity
            android:name=".Splash"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>